{
    "name": "PHP 8.2 with Apache",
    "image": "mcr.microsoft.com/devcontainers/php:8.2-apache",
    "forwardPorts": [80],
    "mounts": [
      "source=${localWorkspaceFolder},target=/var/www/html,type=bind"
    ],
    "initializeCommand": "sudo service apache2 start",
    "postCreateCommand": "composer install || true",
    "customizations": {
      "vscode": {
        "extensions": [
          "felixfbecker.php-debug",
          "bmewburn.vscode-intelephense-client"
        ]
      }
    }
  }
  