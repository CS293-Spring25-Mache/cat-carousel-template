{
    "name": "PHP 8.2 Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "xdebug.php-debug",
                "eazyne.php-cs-fixer"
            ]
        }
    },
    "forwardPorts": [80],
    "postCreateCommand": "php -v && composer --version"
}